{
  "printWidth": 80,
  "tabWidth": 2,
  "endOfLine": "lf",
  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "semi": true,
  "bracketSameLine": false,
  "jsxSingleQuote": false,
  "jsxBracketSameLine": false,
  "arrowParens": "always",
  "importOrder": [
    "<BUILTIN_MODULES>",
    "^(react/(.*)$)|^(react$)",
    "^(next/(.*)$)|^(next$)",
    "<THIRD_PARTY_MODULES>",
    "^types$",
    "^@/config/(.*)$",
    "^@/lib/(.*)$",
    "^@/lib/context/(.*)$",
    "^@/lib/hooks/(.*)$",
    "^@/lib/domains/(.*)$",
    "^@/lib/repositories/(.*)$",
    "^@/lib/types/(.*)$",
    "^@/components/ui/(.*)$",
    "^@/components/(.*)$",
    "^@/app/(.*)$",
    "^[./]",
    "^@/styles/(.*)$"
  ],
  "importOrderCaseSensitive": false,
  "plugins": [
    "@ianvs/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ],
  "tailwindStylesheet": "./styles/globals.css",
  "tailwindAttributes": ["class", "className", "ngClass", "class:list"],
  "tailwindFunctions": ["clsx", "cn", "classNames", "tw"]
}
